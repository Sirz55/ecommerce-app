# Environment
NODE_ENV=development
PORT=5000
HOST=localhost

# MongoDB
MONGO_URI=mongodb://localhost:27017/ecommerce
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=example

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRATION=7d

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# CORS
CORS_ORIGIN=http://localhost:3000

# Client URL
CLIENT_URL=http://localhost:3000

# Cache
CACHE_ENABLED=true
CACHE_PROVIDER=redis
CACHE_TTL=3600

# Monitoring
MONITORING_ENABLED=true
MONITORING_PROVIDER=prometheus

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Password Security
PASSWORD_SALT_ROUNDS=10

# Logging
LOG_LEVEL=info

# Redis (if using Redis for cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Production Settings (override in production)
PROD_CORS_ORIGIN=https://your-production-domain.com
PROD_CLIENT_URL=https://your-production-domain.com
PROD_MONGO_URI=mongodb://mongo:27017/ecommerce-prod
